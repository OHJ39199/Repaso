<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Repaso.MVVM.Views.MainPage"
             xmlns:viewmodel="clr-namespace:Repaso.MVVM.ViewModels"
             x:DataType="viewmodel:MainViewModels"
             Title="MainPage">
    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="calculadora IVA"
                    Command="{Binding NavigateToIVACommand}"
                    Background="LightBlue"
                    TextColor="Black"
                    Margin="10,10,10,10"/>
            <Button Text="mascotas"
                    Command="{Binding NavigateToMascotasCommand}"
                    Background="LightGreen"
                    TextColor="Black"
                    Margin="10,10,10,10"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>